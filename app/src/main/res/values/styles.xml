<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorControlHighlight">@color/amber_500</item>
    </style>

    <style name="EventMicrositeBackground" parent="Widget.Design.CoordinatorLayout">
        <item name="android:background">@color/default_background</item>
    </style>

    <style name="EventDiscoveryBannerSubText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="EventMicrositeHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:paddingBottom">@dimen/_4dp</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="EventMicrositeParaText" parent="TextAppearance.AppCompat">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lineSpacingExtra">@dimen/_4dp</item>
    </style>

    <style name="EventMicrositeTimelineHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">@dimen/_2dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="EventMicrositeTimelineParaText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black_medium</item>
        <item name="android:paddingBottom">@dimen/_4dp</item>
    </style>

</resources>