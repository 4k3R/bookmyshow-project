<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/microsite_sponsors_list_header_1"
            style="@style/EventMicrositeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/microsite_sponsors_list_para_1"
            style="@style/EventMicrositeParaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_header_2"
            style="@style/EventMicrositeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_para_2"
            style="@style/EventMicrositeParaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/microsite_sponsors_list_image_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_banner_imageview"
            android:layout_marginBottom="@dimen/_8dp"
            android:contentDescription="@string/sponsors_list"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/microsite_sponsors_list_header_3"
            style="@style/EventMicrositeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_para_3"
            style="@style/EventMicrositeParaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_header_4"
            style="@style/EventMicrositeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_para_4"
            style="@style/EventMicrositeParaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/microsite_sponsors_list_image_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_banner_imageview"
            android:layout_marginBottom="@dimen/_8dp"
            android:contentDescription="@string/sponsors_list"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/microsite_sponsors_list_header_5"
            style="@style/EventMicrositeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/microsite_sponsors_list_para_5"
            style="@style/EventMicrositeParaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>